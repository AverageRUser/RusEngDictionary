<Window x:Class="RusEngDictionary.WindowEntry"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RusEngDictionary"
        mc:Ignorable="d"
        Title="WindowEntry" Height="260" Width="400">
    <Grid>
        <Label Content="Название слова" HorizontalAlignment="Left" Margin="10,17,0,0" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Left" Margin="10,48,0,0" TextWrapping="Wrap" Text="{Binding Word}" VerticalAlignment="Top" Width="120"/>
        <TextBox HorizontalAlignment="Left" Margin="10,156,0,0" TextWrapping="Wrap" Text="{Binding Definition}" VerticalAlignment="Top" Width="120"/>
        <TextBox HorizontalAlignment="Left" Margin="10,102,0,0" TextWrapping="Wrap" Text="{Binding Translation}" VerticalAlignment="Top" Width="120"/>
        <Label Content="Перевод" HorizontalAlignment="Left" Margin="10,71,0,0" VerticalAlignment="Top"/>
        <Label Content="Значение" HorizontalAlignment="Left" Margin="10,125,0,0" VerticalAlignment="Top"/>
        <Button Content="Добавить" HorizontalAlignment="Left" Margin="312,193,0,0" VerticalAlignment="Top" Width="62" Click="Button_Click"/>

    </Grid>
</Window>
